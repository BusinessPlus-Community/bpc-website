# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Python - PEP 8 style
[*.py]
indent_size = 4
max_line_length = 88

# Shell scripts
[*.sh]
indent_size = 4
end_of_line = lf

# YAML configuration files
[*.{yml,yaml}]
indent_size = 2

# JSON configuration files
[*.json]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab